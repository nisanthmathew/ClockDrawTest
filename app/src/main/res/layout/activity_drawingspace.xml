<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".drawingspace"
    android:id="@+id/my_viewgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="36dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="@dimen/fab_margin"
        android:layout_toEndOf="@+id/newimage"
        android:background="@color/colourbutton"
        android:backgroundTint="@color/colourbutton"
        app:backgroundTint="@color/colourbutton"
        app:srcCompat="@drawable/ic_tick" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colourbutton"
        android:clickable="true"
        app:backgroundTint="@color/colourbutton"
        app:srcCompat="@drawable/ic_add" />

</RelativeLayout>